<Window x:Class="FlagsGame.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlagsGame"
        mc:Ignorable="d"
        Title="Home" Height="350" Width="400">
    <Grid Background="#448AFF" >
        <Grid.RowDefinitions>
            <RowDefinition  Height="1*"></RowDefinition>
            <RowDefinition  Height="1*"></RowDefinition>
            <RowDefinition  Height="1*"></RowDefinition>
            <RowDefinition  Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="10" Background="#9C27B0" FontWeight="DemiBold" FontSize="35" Click="Btn_play" Foreground="White">Play</Button>
        <Button Grid.Row="1" Margin="10" Background="#9C27B0" FontWeight="DemiBold" FontSize="35" Click="Btn_configuration" Foreground="White" >Configuration</Button>
        <Button Grid.Row="2" Margin="10" Background="#9C27B0" FontWeight="DemiBold" FontSize="35" Click="Btn_results" Foreground="White" >Results</Button>
        <Button Grid.Row="3" Margin="10" Background="#9C27B0" FontWeight="DemiBold" FontSize="35" Click="Btn_help" Foreground="White" >Help</Button>
    </Grid>
</Window>
